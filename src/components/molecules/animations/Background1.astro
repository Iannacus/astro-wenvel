---
  import BackgroundAnimation from '../../react-components/BackgroundAnimation'
---

<div class="feature-background-animation">
    <BackgroundAnimation client:load />
    <div class="feature-background-gradient" />
</div>

<style>
  .feature-background-animation {
    position: absolute;
    width: 100%;
    height: 80%;
    left: initial;
    border-radius: 2rem;
    border-top-left-radius: 0;
    overflow: hidden;
  }

  .feature-background-gradient {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 0;
    background: linear-gradient(
      45deg, var(--gradient-purple-rgba) 20%,
      var(--gradient-red-rgba) 50%,
      var(--gradient-orange-rgba) 80%

    );
  }
</style>