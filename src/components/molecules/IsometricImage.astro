---
const { image, alt } = Astro.props;
---

<div class="card relative">
  <img class="relative" src={image} alt={alt} />
  <div class="background absolute"></div>
</div>

<style>
  .card {
    width: 130px;
  }

  @media (min-width: 990px) {
    .card {
      width: 200px;
    }
  }
  .card img {
    width: 100%;
    transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    box-shadow: 0px 0px 15px rgba(0, 0, 0, 0);
    border-radius: 7px;
  }

  .background {
    width: 100%;
    height: 100%;
    z-index: -1;
    top: 0;
    left: 0;
    filter: blur(6px);
    background: rgba(0, 0, 0, 0);
    trasition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .card:hover img {
    transform: translate(-30px, -30px);
    cursor: pointer;
  }

  .card:hover .background {
    top: -100%;
    left: 0;
    background: rgba(0, 0, 0, 0.5);
  }
</style>
